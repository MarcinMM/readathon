<script>
  jQuery(document).ready(function () {
    jQuery("#logout1").click(function () {
      jQuery("#logout_form1").submit();
    });
    jQuery("#logout2").click(function () {
      jQuery("#logout_form2").submit();
    });
  });
</script>

<%= form_tag(destroy_user_session_path, id: 'logout_form1', method: 'delete') do %><% end %>
<%= form_tag(logout_path, id: 'logout_form2', method: 'post') do %><% end %>

<ul class="navigation">
  <li class="mobile-navigation-breadcrumb">
    <em>Navigation</em>
  </li>
  <% if current_user != nil %>
      <li>
        <p id="logout1">
          <i class="fa fa-user"></i>
          <i class="fa fa-circle"></i>
          Admin Logout
          <em style="color:white;"><%= current_user.email %></em>
        </p>
      </li>
  <% end %>
  <% if current_student != nil %>
      <li>
        <p id="logout2">
          <i class="fa fa-user"></i>
          <i class="fa fa-circle"></i>
          Logout
          <em style="color:white;"><%= current_student.first %></em>
        </p>
      </li>
      <li>
        <p>
          <a href="<%= priprofile_index_path %>">
            <i class="fa fa-home"></i>
            <i class="fa fa-circle"></i>
            <%= current_student.first %>'s &nbsp; Profile
            <em style="color:white;"><%= current_student.first %> <%= current_student.last %></em>
          </a>
        </p>
      </li>
  <% else %>
      <li>
        <p>
          <a href="/">
            <i class="fa fa-home"></i>
            <i class="fa fa-circle"></i>
            Richmond Read-A-Thon
            <em style="color:white;">sponsor and help fund our school</em>
          </a>
        </p>
      </li>
  <% end %>
  <li class="mobile-navigation-breadcrumb">
    <em>Copyright 2016. All rights reserved.</em>
  </li>
</ul>
