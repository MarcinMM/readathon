<ul class="navigation">
  <li class="mobile-navigation-breadcrumb">
    <em>Navigation</em>
  </li>
  <% if current_user != nil %>
    <li>
      <p id="acount">
        <a href="<%= account_path %>">
        <i class="fa fa-gear"></i>
        <i class="fa fa-circle"></i>
          Settings
          <em style="color:white;">account mgmt</em>
        </a>
      </p>
    </li>
    <% current_user.students.each do |student| %>
      <li>
        <p>
          <a href="<%= autologin_path(student.code) %>">
            <i class="fa fa-user"></i>
            <i class="fa fa-circle"></i>
            <%= student.first %>'s &nbsp; Profile
            <em style="color:white;"><%= student.first %> <%= student.last %></em>
          </a>
        </p>
      </li>
    <% end %>
  <% else %>
    <li>
      <p id="acount">
        <a href="<%= account_path %>">
        <i class="fa fa-user"></i>
        <i class="fa fa-circle"></i>
          Sign In / Sign Up
          <em style="color:white;text-transform:none;font-weight:bold;">Read for Richmond</em>
        </a>
      </p>
    </li>
  <% end %>
  <li class="mobile-navigation-breadcrumb">
    <em>Copyright 2016. All rights reserved.</em>
  </li>
</ul>
