<form id="donate_form" action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_blank">
  <input type="hidden" name="cmd" value="_s-xclick">
  <input type="hidden" name="hosted_button_id" value="YXGZRUDP4AXJL">
</form>

<div class="social-strip">
  <div class="box-960">
    <div class="left-social-strip animated fadeIn">
      <% if days_to_end > 0 %>
        <h3><strong><%= days_to_end %> Days Remaining</strong></h3>
        <h5 style="line-height:11px;">Richmond PTA Read-A-Thon ends <%= Rails.configuration.end_date.strftime("%b %d") %></h5>
      <% else %>
        <h3><strong>Our Read-A-Thon has closed</strong></h3>
        <h5 style="line-height:11px;">but it is never too late to help the Richmond PTA.
          <a style="font-weight:bold; color:white;" href="javascript:void(0)" onclick="$('#donate_form').submit()">Donate here!</a></h5>
      <% end %>
      </a>
    </div>
  </div>
</div>
