<div class="one-half-responsive last no-bottom">
  <h5>Recent people who have pledged</h5>
  <% student.pledges.take(5).each do |pledge| %>
      <blockquote class="quote-one">
        <strong>
          <%= pledge.name %> has pledged
          <% if pledge.ptype == "flat" %>
              flat donation of <%= number_to_currency(pledge.amount) %>
          <% else %>
              <%= number_to_currency(pledge.amount) %> an hour
          <% end %>
        </strong><br/><%= pledge.message %>
      </blockquote>
      <br><br>
  <% end %>
  <p><a href="">click to view all your pledges</a></p>
  <br>
</div>
