<script id="twitter-wjs" type="text/javascript" async defer src="//platform.twitter.com/widgets.js"></script>

<div class="social-strip">
  <div class="box-960">
    <div class="left-social-strip animated fadeIn">
      <a href="<%= priprofile_pledge_path %>">
        <h3>Help Swimmy support teachers!</h3>
        <h5 style="line-height:11px;">Share your Read-A-Thon page with friends and family</h5>
      </a>
    </div>
    <div class="right-social-strip">
      <% if !current_student.nil? && current_student.id == student.id %>
        <a href="<%= priprofile_pledge_email_path %>"><img src="/images/email_button.png"/></a>
      <% end %>
      <a target="_blank" style="margin-right:20px;" href="https://www.facebook.com/sharer/sharer.php?u=<%= student.bitly_profile %>"><img src="/images/fb_share.png"/></a>
      <a class="twitter-share-button"
         href="https://twitter.com/share"
         data-size="small"
         data-url="<%= student.bitly_pledge %>"
         data-text="Please support <%= student.first %>'s Read-A-Thon through Richmond Elementary School.">
        Tweet
      </a>
    </div>
  </div>
</div>
