<script type="text/javascript" async defer src="//assets.pinterest.com/js/pinit.js"></script>
<script id="twitter-wjs" type="text/javascript" async defer src="//platform.twitter.com/widgets.js"></script>

<div class="social-strip">
  <div class="box-960">
    <div class="left-social-strip animated fadeIn">
      <h3>Promote Your Read-A-Thon Profile</h3>
      <h5>share your profile on social networks</h5>
    </div>
    <div class="right-social-strip">
      <a target="_blank" style="margin-right:20px;" href="https://www.facebook.com/sharer/sharer.php?u=<%= pub_profile_url(student_id) %>"><img src="/images/fb_share.png"/></a>
      <a class="twitter-share-button"
         href="https://twitter.com/share"
         data-size="small"
         data-url="pub_profile_url(student_id)"
         data-text="Help support me in my Read-A-Thon through Richmond Elementary School.  <%= profile_bitly_url %>">
        Tweet
      </a>
      &nbsp;
      <a href="https://www.pinterest.com/pin/create/button/">
        <img src="//assets.pinterest.com/images/pidgets/pinit_fg_en_rect_gray_20.png" />
      </a>
    </div>
  </div>
</div>
