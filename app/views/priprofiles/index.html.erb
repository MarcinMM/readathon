<script>
  jQuery(document).ready(function () {
    jQuery(".close-big-notification").click(function () {
      jQuery(".big-notification").toggle();
    });

    jQuery("#challange").click(function () {
      jQuery("#accept-challange").submit();
    });
  });
</script>

<%= form_tag(priprofile_challange_path, id: 'accept-challange', method: 'post') do %>
<% end %>

<div class="social-strip">
  <div class="box-960">
    <div class="left-social-strip animated fadeIn">
      <h3>Promote Your Read-A-Thon Profile</h3>
      <h5>share your profile on social networks</h5>
    </div>
    <div class="right-social-strip">
      <a href="#"><i class="fa fa-facebook"></i></a>
      <a href="#"><i class="fa fa-twitter"></i></a>
    </div>
  </div>
</div>

<% unless @student.daily_challange_complete %>
    <blockquote class="quote-one yellow-quote">
      <div style="color:black;float:left;"><img style="width:50px;" src="/images/badges/badge14.png"/></div>
      <div style="float:left;margin-left:15px;margin-top:12px;"><strong>Daily Challange:</strong>
        <span style="margin-left:10px;color:black;"><%= Challange.daily_challange.description %></span>
      </div>
    </blockquote>
<% end %>

<% if @levelup %>
    <div class="big-notification red-notification" style="margin:20px;margin-bottom:0;">
      <h5 class="uppercase">Level Up!</h5>
      <center>
        <a href="#" class="close-big-notification">x</a>
        <span style="color:white;">Congratulation - You have reached level <%= @student.level_id %>!</span>
        <img src="/images/levels/level<%= @student.level_id %>.png"/>
        <p>You have unlocked new Avatars.
          <a style="color:white;font-weight:bold;" href="<%= priprofile_avatar_path %>">Check them out</a></p>
      </center>
    </div>
<% end %>

<% if @challange %>
    <div class="big-notification red-notification" style="margin:20px;margin-bottom:0;">
      <h5 class="uppercase">Completed Daily Challange!</h5>
      <center>
        <a href="#" class="close-big-notification">x</a>
        <span style="color:white;">Congratulation - You have completed the daily challange!</span>
        <img src="/images/badges/badge<%= @challange.id %>.png"/>
        <span style="color:white;"><%= @challange.description %></span>
      </center>
    </div>
<% end %>

<div class="content">
  <div style="margin-bottom:20px;"></div>
  <div class="box-960">
    <div class="one-half-responsive no-bottom" style="margin-right:0;">
      <h1 style="margin-bottom:0;font-size:30px;"><%= @student.first %> <%= @student.last[0, 1] %></h1>
      <em><%= @student.teacher.grade.ordinalize %> Grade - <%= @student.teacher.last %> sensei</em>

      <a style="margin-top:10px;margin-left:35px" href="<%= priprofile_avatar_path %>">change your profile image</a>
      <a href="<%= priprofile_avatar_path %>"><img style="margin-bottom: 20px; border-radius: 25px; border: 2px solid #000; height:240px;" src="/images/profiles/<%= @student.avatar_id %>.png"/></a>

      <div style="margin-bottom:20px;">
        Minutes you have read today.<br/>
        <%= link_to "- 15", priprofile_subtract15m_path, method: :post, style: "margin:0;height:70px;font-size:20px;padding-top:25px;", class: "button button-light" %>
        <span class="button" style="margin:0;height:70px;vertical-align: top;width:120px;background-color:#e6ebec;color:#5a5a5a;font-size:40px;padding-top:20px;"><%= @student.student_minutes_today %></span>
        <%= link_to "+ 15", priprofile_add15m_path, method: :post, style: "margin:0;height:70px;font-size:20px;padding-top:25px;", class: "button button-light" %>
        <br/>Use the + and - to adjust the time.<br/><br/>

        <% unless @student.daily_challange_complete %>
            <a id="challange" href="#" class="checkbox checkbox-class-3">
              <span style="color: rgba(243, 156, 18,1.0); font-weight: bold;">I have completed the Daily Challange</span><br/>
              <%= Challange.daily_challange.description %>
            </a>
        <% end %>
      </div>

    </div>

    <div class="decoration hide-if-responsive"></div>

    <div class="one-fifth-responsive one-half-full" style="float:right;">
      <div class="pricing-table pricing-selected-green">
        <h1>
          <strong style="font-size: 1.3em;">Level <%= @student.level_id %> Reader</strong>
          <br/>
          <em><%= @student.level.description %></em>
        </h1>
        <h2>
          <%= number_to_currency(@student.money_raised) %> Raised
          <em>pledged at
            <span style="font-weight:bold; color: #FFFFFF;"><%= number_to_currency(@student.pledged_per_hour) %></span>
            an hour</em>
        </h2>
        <ul>
          <li><strong><%= days_to_end %> days reamaing</strong></li>
          <li>You have read for <strong><%= mins_to_words(@student.student_minutes_total) %></strong></li>
          <li><strong><%= @student.mins_to_next_level %></strong> minutes to next level</li>
          <li><strong><%= @student.challanges.length %></strong> badges earned</li>
          <li><strong><%= @student.pledges.length %></strong> people have pledged you</li>
        </ul>
        <a href="<%= priprofile_pledge_path %>" class="button center-button button-red">Request a Pledge</a>
      </div>
    </div>
    <div class="clear"></div>
    <br/>
  </div>
</div>

<div class="content">
  <div class="box-960" style="margin-bottom:25px;">
    <div class="decoration"></div>

    <div class="container no-bottom">
      <div class="one-half-responsive">
        <h5>Badges you have earned</h5>
        <% @student.challanges.each do |challange| %>
            <div style="width:120px; float:left; text-align:center; margin:10px 20px 10px 0;">
              <img style="width:120px;" src="/images/badges/badge<%= challange.id %>.png"/>
              <%= challange.description %>
            </div>
        <% end %>
      </div>

      <div class="one-half-responsive last no-bottom">
        <h5>Recent people who have pledged</h5>
        <% @student.pledges.take(5).each do |pledge| %>
            <blockquote class="quote-one">
              <strong>
                <%= pledge.name %> has pledged
                <% if pledge.ptype == "flat" %>
                    flat donation of <%= number_to_currency(pledge.amount) %>
                <% else %>
                    <%= number_to_currency(pledge.amount) %> an hour
                <% end %>
              </strong><br/><%= pledge.message %>
            </blockquote>
            <br><br>
        <% end %>
        <p><a href="">click to view all your pledges</a></p>
        <br>
      </div>
      <div class="clear"></div>
    </div>
  </div>
</div>

