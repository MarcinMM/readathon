<%= render '/includes/strip' %>

<div class="content">

  <div class="login-box-one one-third-responsive">
    <div style="display: none; width: 270px;margin: 0 auto;">
    </div>
    <div style="width: 270px;margin: 0 auto;">
      &nbsp;
    </div>
  </div>

  <%= devise_error_messages! %>

  <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: {style: 'overflow:visible;'} do |f| %>
    <div class="login-box-one one-third-responsive full-bottom">
      <div class="login-wrapper half-bottom">
        <img src="/images/rsf_logo.png" alt="img">
        <p class="half-bottom" style="margin-top:70px;"></p>
        <em><i class="fa fa-envelope"></i>Email</em>
        <%= f.email_field :email, autofocus: true, class: 'green-focus login-box-one-pwd half-bottom' %>
        <em><i class="fa fa-lock"></i>Password</em>
        <%= f.password_field :password, autocomplete: "off", class: 'green-focus login-box-one-pwd half-bottom' %>
        <em><i class="fa fa-lock"></i>Confirm Password</em>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'green-focus login-box-one-pwd half-bottom' %>
        <%= f.submit "Sign Up", class: "button button-green center-button" %>
        <em class="forgot-login no-bottom" style="margin-top:10px;"><a href="<%= new_session_path(resource_name) %>">Already have an account?</a></em>
        <em class="forgot-login no-bottom"><a href="<%= new_password_path(resource_name) %>">Forgot your password?</a></em>
      </div>
    </div>
  <% end %>
  <div class="clear"></div>
</div>
