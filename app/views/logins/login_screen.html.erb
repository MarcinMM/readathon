<div class="content">

  <div class="login-box-one one-third-responsive">
    <div style="display: none; width: 270px;margin: 0 auto;">
    </div>
    <div style="width: 270px;margin: 0 auto;">
      &nbsp;
    </div>
  </div>

  <div class="login-box-one one-third-responsive half-bottom">
    <div class="login-wrapper half-bottom">
      <%= form_tag(login_path, method: "post") do %>
          <img src="images/rsf_logo.png" alt="img">
          <p class="half-bottom">Enter the code provided in your Read-A-Thon email.</p>

          <% if flash[:alert] %>
              <div class="small-notification red-notification" style="margin-bottom:10px;">
                <p class="center-text uppercase" style="margin-top:0;">
                  <i class="fa fa-warning"></i>
                  <%= flash[:alert] %>
                  <a href="#" class="close-small-notification">x</a>
                </p>
              </div>
          <% end %>

          <em><i class="fa fa-lock"></i>Code</em>
          <input onfocus="if (this.value=='') this.value = ''" onblur="if (this.value=='') this.value = ''" type="text" name="code" value="" class="green-focus login-box-one-pwd half-bottom">
          <input type="submit" class="button button-green center-button" value="Login"/>
          <em class="forgot-login no-bottom" style="margin-top:10px;">Forgot your code? Email us <a href="mailto:rsf.pdx@gmail.com">rsf.pdx@gmail.com</a></em>
      <% end %>
    </div>
  </div>

  <div class="clear"></div>

</div>