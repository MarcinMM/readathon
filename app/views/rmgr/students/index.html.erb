<script>
  jQuery(document).ready(function () {
    jQuery("tr:even").addClass("even");
  });
</script>

<div class="content box-960 container" style="margin-bottom: 10px;">

  <div class="small-breadcrumb">
    <div class="left-breadcrumb">
      <a href="<%= rmgr_overviews_path %>">Overview</a>
      <a href="#"><i class="fa fa-angle-right"></i>Students</a>
    </div>
    <div class="right-breadcrumb">
    </div>
    <div class="clear"></div>
    <div style="margin-bottom:20px;" class="decoration"></div>
  </div>

  <h4>Read-A-Thon Students List</h4>

<table class="table">
  <tbody>
  <tr>
    <th style="width:100px;">GRADE</th>
    <th>TEACHER</th>
    <th>FIRST</th>
    <th>LAST</th>
    <th>CODE</th>
    <th>EMAIL</th>
    <th></th>
  </tr>
  <% @students.each do |student| %>
      <tr>
        <td><%= student.teacher.grade %></td>
        <td><%= student.teacher.last %></td>
        <td><%= student.first %></td>
        <td><%= student.last %></td>
        <td><%= student.code %></td>
        <td><%= student.email %></td>
        <td>
          <%= link_to 'edit', edit_rmgr_student_path(student), style: 'display:inline;' %>&nbsp;&nbsp;&nbsp;&nbsp;/&nbsp;&nbsp;
          <%= link_to 'delete', rmgr_student_path(student), style: 'display:inline;', method: 'delete', confirm: 'Are you sure?' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<br/>

<%= link_to 'Add Student', new_rmgr_student_path, class: 'button button-blue half-bottom', style: "float:left; margin-right:10px;" %>
</div>