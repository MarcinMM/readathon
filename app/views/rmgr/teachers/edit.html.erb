<div class="content box-960 container" style="margin-bottom: 10px;">
  <h4 style="margin-top: 30px;">Read-A-Thon Edit Teacher</h4>

  <%= form_for [:rmgr, @teacher] do |f| %>

      <%= render 'edit', f: f, msg: "leave blank if you don't want to change it" %>

      <%= f.submit "Update Teacher", class: 'button button-blue half-bottom', style: "height:40px; float:left; margin-right:10px;" %>
      <%= link_to "Back", :back, class: 'button button-light', style: 'width:90px; float:left; margin-left:10px;' %>

  <% end %>
</div>