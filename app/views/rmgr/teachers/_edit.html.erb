<% if @teacher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this registration from being saved:</h2>

      <ul>
        <% @teacher.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<div class="field half-bottom">
  <%= f.label :name, class: 'field-title defaultField' do %>
      Name <span>(required)</span>
  <% end %>
  <%= f.text_field :name, class: 'contactField field-deco requiredField' %>
</div>

<div class="field half-bottom">
  <%= f.label :grade, class: 'field-title defaultField' do %>
      Grade <span>(required)</span>
  <% end %>
  <%= f.select :grade,
               options_for_select([['', ''], ['Kindergarten', '0'], ['1st Grade', '1'], ['2nd Grade', '2'], ['3rd Grade', '3'], ['4th Grade', '4'], ['5th Grade', '5']], @teacher.grade),
               {}, {class: 'contactField field-deco requiredField'} %>
</div>

