<script>
  jQuery(document).ready(function () {
    jQuery("tr:even").addClass("even");
  });
</script>

<div class="content box-960 container" style="margin-bottom: 10px;">
  <h4 style="margin-top: 30px;">Read-A-Thon Teachers List</h4>

<table class="table">
  <tbody>
  <tr>
    <th style="width:100px;">GRADE</th>
    <th>FIRST</th>
    <th>LAST</th>
    <th>EMAIL</th>
    <th></th>
  </tr>
  <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.grade %></td>
        <td><%= teacher.first %></td>
        <td><%= teacher.last %></td>
        <td><%= teacher.user.email %></td>
        <td>
          <%= link_to 'edit', edit_rmgr_teacher_path(teacher), style: 'display:inline;' %>&nbsp;&nbsp;&nbsp;&nbsp;/&nbsp;&nbsp;
          <%= link_to 'delete', rmgr_teacher_path(teacher), style: 'display:inline;', method: 'delete', confirm: 'Are you sure?' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>
<br/>

<%= link_to 'Add Teacher', new_rmgr_teacher_path, class: 'button button-blue half-bottom', style: "float:left; margin-right:10px;" %>
</div>