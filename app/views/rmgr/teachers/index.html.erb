<script>
  jQuery(document).ready(function () {
    jQuery("tr:even").addClass("even");
  });
</script>

<div class="content box-960 container" style="margin-bottom: 10px;">

  <div class="small-breadcrumb">
    <div class="left-breadcrumb">
      <a href="<%= rmgr_overviews_path %>">Overview</a>
      <a href="#"><i class="fa fa-angle-right"></i>Teachers</a>
    </div>
    <div class="right-breadcrumb">
    </div>
    <div class="clear"></div>
    <div style="margin-bottom:20px;" class="decoration"></div>
  </div>

  <h4>Read for Richmond Teachers List</h4>

  <table class="table">
    <tbody>
    <tr>
      <th style="width:100px;">GRADE</th>
      <th>FIRST</th>
      <th>STUDENTS</th>
      <th>GOAL</th>
      <th>HOME</th>
      <th>GT%</th>
      <th></th>
    </tr>
    <% @teachers.each do |teacher| %>
        <tr>
          <td><%= teacher.grade %></td>
          <td><%= teacher.name %></td>
          <td><%= teacher.total_students %></td>
          <td><%= teacher.reading_goal %></td>
          <td><%= teacher.total_minutes %></td>
          <td><%= teacher.gt_percent %>%</td>
          <td>
            <%= link_to 'edit', edit_rmgr_teacher_path(teacher), style: 'display:inline;' %>
          </td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <br/>

  <%= link_to 'Add Teacher', new_rmgr_teacher_path, class: 'button button-blue half-bottom', style: "float:left; margin-right:10px;" %>
</div>