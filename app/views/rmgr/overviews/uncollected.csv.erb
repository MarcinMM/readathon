<%- headers = ['Teacher', 'Grade', 'Last', 'First', 'Pledge Id', 'Pledge Nick Name', 'Uncollected'] -%>
<%= CSV.generate_line headers -%>
<%=
  CSV.generate do |csv|
    @pledges.each do |pledge|
      csv << [
          pledge.student.teacher.name,
          pledge.student.teacher.grade,
          pledge.student.last,
          pledge.student.first,
          pledge.id,
          pledge.name,
          pledge.amount,
      ]
    end
  end.html_safe
%>
